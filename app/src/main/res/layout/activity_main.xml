<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/colorMainBackground"
    tools:context="cz.petrnikolas.nikcalc.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/linearLayout"
        android:keepScreenOn="true">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp">

            <Button
                android:layout_width="fill_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="C"
                android:id="@+id/btnDelete"
                android:layout_marginRight="4dp"
                android:layout_marginLeft="4dp"
                android:textColor="@color/textColor"
                android:textSize="30sp"
                android:onClick="DeleteAll"
                android:background="@color/colorSecondaryBackground" />

            <Button
                android:layout_width="fill_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Del"
                android:id="@+id/btnDeleteOne"
                android:layout_marginRight="4dp"
                android:layout_marginLeft="4dp"
                android:textColor="@color/textColor"
                android:textSize="30sp"
                android:onClick="DeleteOne"
                android:background="@color/colorSecondaryBackground" />

            <Button
                android:layout_width="fill_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="âˆš"
                android:id="@+id/btnRadix"
                android:layout_marginRight="4dp"
                android:layout_marginLeft="4dp"
                android:textColor="@color/textColor"
                android:textSize="30sp"
                android:onClick="Radix"
                android:background="@color/colorSecondaryBackground" />

            <Button
                android:layout_width="fill_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="+/-"
                android:id="@+id/btnPlusMinus"
                android:layout_marginRight="4dp"
                android:layout_marginLeft="4dp"
                android:textColor="@color/textColor"
                android:textSize="30sp"
                android:onClick="Minus"
                android:background="@color/colorSecondaryBackground" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp" >

            <Button
                android:layout_width="fill_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="7"
                android:id="@+id/btn7"
                android:layout_marginRight="4dp"
                android:layout_marginLeft="4dp"
                android:textColor="@color/textColor"
                android:textSize="30sp"
                android:background="@color/colorMainBackground"
                android:onClick="AddNumber"/>

            <Button
                android:layout_width="fill_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="8"
                android:id="@+id/btn8"
                android:layout_marginRight="4dp"
                android:layout_marginLeft="4dp"
                android:textColor="@color/textColor"
                android:textSize="30sp"
                android:background="@color/colorMainBackground"
                android:onClick="AddNumber"/>

            <Button
                android:layout_width="fill_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="9"
                android:id="@+id/btn9"
                android:layout_marginRight="4dp"
                android:layout_marginLeft="4dp"
                android:textColor="@color/textColor"
                android:textSize="30sp"
                android:background="@color/colorMainBackground"
                android:onClick="AddNumber"/>

            <Button
                android:layout_width="fill_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="/"
                android:id="@+id/btnDel"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:textColor="@color/textColor"
                android:textSize="30sp"
                android:onClick="Divide"
                android:background="@color/colorSecondaryBackground" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp" >

            <Button
                android:layout_width="fill_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="4"
                android:id="@+id/btn4"
                android:layout_marginRight="4dp"
                android:layout_marginLeft="4dp"
                android:textColor="@color/textColor"
                android:textSize="30sp"
                android:background="@color/colorMainBackground"
                android:onClick="AddNumber" />

            <Button
                android:layout_width="fill_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="5"
                android:id="@+id/btn5"
                android:layout_marginRight="4dp"
                android:layout_marginLeft="4dp"
                android:textColor="@color/textColor"
                android:textSize="30sp"
                android:background="@color/colorMainBackground"
                android:onClick="AddNumber" />

            <Button
                android:layout_width="fill_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="6"
                android:id="@+id/btn6"
                android:layout_marginRight="4dp"
                android:layout_marginLeft="4dp"
                android:textColor="@color/textColor"
                android:textSize="30sp"
                android:background="@color/colorMainBackground"
                android:onClick="AddNumber" />

            <Button
                android:layout_width="fill_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="*"
                android:id="@+id/btnX"
                android:layout_marginRight="4dp"
                android:layout_marginLeft="4dp"
                android:textColor="@color/textColor"
                android:textSize="30sp"
                android:onClick="Multiply"
                android:background="@color/colorSecondaryBackground" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp" >

            <Button
                android:layout_width="fill_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="1"
                android:id="@+id/btn1"
                android:layout_marginRight="4dp"
                android:layout_marginLeft="4dp"
                android:textColor="@color/textColor"
                android:textSize="30sp"
                android:background="@color/colorMainBackground"
                android:onClick="AddNumber" />

            <Button
                android:layout_width="fill_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="2"
                android:id="@+id/btn2"
                android:layout_marginRight="4dp"
                android:layout_marginLeft="4dp"
                android:textColor="@color/textColor"
                android:textSize="30sp"
                android:background="@color/colorMainBackground"
                android:onClick="AddNumber" />

            <Button
                android:layout_width="fill_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="3"
                android:id="@+id/btn3"
                android:layout_marginRight="4dp"
                android:layout_marginLeft="4dp"
                android:textColor="@color/textColor"
                android:textSize="30sp"
                android:background="@color/colorMainBackground"
                android:onClick="AddNumber" />

            <Button
                android:layout_width="fill_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="-"
                android:id="@+id/btnMinus"
                android:layout_marginRight="4dp"
                android:layout_marginLeft="4dp"
                android:textColor="@color/textColor"
                android:textSize="30sp"
                android:onClick="Subtract"
                android:background="@color/colorSecondaryBackground" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp" >

            <Button
                android:id="@+id/btn0"
                android:layout_width="fill_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:background="@color/colorMainBackground"
                android:onClick="AddNumber"
                android:text="0"
                android:textColor="@color/textColor"
                android:textSize="30sp" />

            <Space
                android:layout_width="fill_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

            <Button
                android:layout_width="fill_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="."
                android:id="@+id/btnComma"
                android:layout_marginRight="4dp"
                android:layout_marginLeft="4dp"
                android:textColor="@color/textColor"
                android:textSize="32sp"
                android:background="@color/colorMainBackground"
                android:onClick="AddComma" />

            <Button
                android:layout_width="fill_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="+"
                android:id="@+id/btnPlus"
                android:layout_marginRight="4dp"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="0dp"
                android:textColor="@color/textColor"
                android:textSize="30sp"
                android:onClick="AddUp"
                android:background="@color/colorSecondaryBackground" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:weightSum="1" >

            <android.support.v7.widget.CardView
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:elevation="10dp"
                app:cardCornerRadius="5dp">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="="
                    android:id="@+id/btnResult"
                    android:textColor="@color/textColor"
                    android:textSize="32sp"
                    android:background="@color/colorPrimary"
                    android:onClick="Result"
                    android:elevation="10dp" />
            </android.support.v7.widget.CardView>

        </TableRow>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/linearLayout">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="34dp"
            android:weightSum="1">

            <TextView
                android:layout_width="112dp"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="NaN"
                android:textColor="@color/colorBrand"
                android:id="@+id/Number1"
                android:textSize="12dp"
                android:layout_alignRight="@+id/linearLayout"
                android:layout_alignEnd="@+id/linearLayout"
                android:layout_alignLeft="@+id/linearLayout"
                android:layout_alignStart="@+id/linearLayout"
                android:layout_above="@+id/linearLayout"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="0.3"
                android:gravity="right" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="..."
                android:textColor="@color/colorBrand"
                android:id="@+id/Mark"
                android:textSize="15dp"
                android:layout_alignRight="@+id/linearLayout"
                android:layout_alignEnd="@+id/linearLayout"
                android:layout_alignLeft="@+id/linearLayout"
                android:layout_alignStart="@+id/linearLayout"
                android:layout_above="@+id/linearLayout"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="0.3"
                android:gravity="center_vertical|center_horizontal"
                android:layout_gravity="center_vertical" />

            <TextView
                android:layout_width="106dp"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="NaN"
                android:textColor="@color/colorBrand"
                android:id="@+id/Number2"
                android:textSize="12dp"
                android:layout_alignRight="@+id/linearLayout"
                android:layout_alignEnd="@+id/linearLayout"
                android:layout_alignLeft="@+id/linearLayout"
                android:layout_alignStart="@+id/linearLayout"
                android:layout_above="@+id/linearLayout"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="0.3"
                android:gravity="left" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/linearLayout"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true">

            <android.support.v7.widget.CardView
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:elevation="10dp"
                app:cardCornerRadius="5dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="0"
                    android:textColor="@color/colorBrand"
                    android:id="@+id/Screen"
                    android:textSize="40sp"
                    android:textStyle="bold"
                    android:background="@color/colorMainBackground"
                    android:layout_alignRight="@+id/linearLayout"
                    android:layout_alignEnd="@+id/linearLayout"
                    android:layout_alignLeft="@+id/linearLayout"
                    android:layout_alignStart="@+id/linearLayout"
                    android:layout_above="@+id/linearLayout"
                    android:layout_gravity="center_vertical"/>
            </android.support.v7.widget.CardView>
        </TableRow>
    </LinearLayout>
</RelativeLayout>
