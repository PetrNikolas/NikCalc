<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="cz.petrnikolas.nikcalc.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/linearLayout"
        android:keepScreenOn="true">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp">

            <Button
                android:layout_width="60dp"
                android:layout_height="55dp"
                android:text="C"
                android:id="@+id/tlacSmaz"
                android:layout_marginRight="4dp"
                android:layout_marginLeft="4dp"
                android:textColor="#FFFFFF"
                android:textSize="30sp"
                android:onClick="VymazVse"
                android:background="@color/colorPrimary" />

            <Button
                android:layout_width="60dp"
                android:layout_height="55dp"
                android:text="Del"
                android:id="@+id/tlacSmazJeden"
                android:layout_marginRight="4dp"
                android:layout_marginLeft="4dp"
                android:textColor="#FFFFFF"
                android:textSize="30sp"
                android:onClick="VymazJeden"
                android:background="@color/colorPrimary" />

            <Button
                android:layout_width="60dp"
                android:layout_height="55dp"
                android:text="âˆš"
                android:id="@+id/tlacOdm"
                android:layout_marginRight="4dp"
                android:layout_marginLeft="4dp"
                android:textColor="#FFFFFF"
                android:textSize="30sp"
                android:onClick="Odmocni"
                android:background="@color/colorPrimary" />

            <Button
                android:layout_width="60dp"
                android:layout_height="55dp"
                android:text="+/-"
                android:id="@+id/tlacPlsMin"
                android:layout_marginRight="4dp"
                android:layout_marginLeft="4dp"
                android:textColor="#FFFFFF"
                android:textSize="30sp"
                android:onClick="Zapor"
                android:background="@color/colorPrimary" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp" >

            <Button
                android:layout_width="60dp"
                android:layout_height="55dp"
                android:text="7"
                android:id="@+id/tlac7"
                android:layout_marginRight="4dp"
                android:layout_marginLeft="4dp"
                android:textColor="#FFFFFF"
                android:textSize="30sp"
                android:background="@color/colorPrimary"
                android:onClick="ZapisCislo"/>

            <Button
                android:layout_width="60dp"
                android:layout_height="55dp"
                android:text="8"
                android:id="@+id/tlac8"
                android:layout_marginRight="4dp"
                android:layout_marginLeft="4dp"
                android:textColor="#FFFFFF"
                android:textSize="30sp"
                android:background="@color/colorPrimary"
                android:onClick="ZapisCislo"/>

            <Button
                android:layout_width="60dp"
                android:layout_height="55dp"
                android:text="9"
                android:id="@+id/tlac9"
                android:layout_marginRight="4dp"
                android:layout_marginLeft="4dp"
                android:textColor="#FFFFFF"
                android:textSize="30sp"
                android:background="@color/colorPrimary"
                android:onClick="ZapisCislo"/>

            <Button
                android:layout_width="60dp"
                android:layout_height="55dp"
                android:text="/"
                android:id="@+id/tlacDel"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:textColor="#FFFFFF"
                android:textSize="30sp"
                android:onClick="Vydel"
                android:background="@color/colorPrimary" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp" >

            <Button
                android:layout_width="60dp"
                android:layout_height="55dp"
                android:text="4"
                android:id="@+id/tlac4"
                android:layout_marginRight="4dp"
                android:layout_marginLeft="4dp"
                android:textColor="#FFFFFF"
                android:textSize="30sp"
                android:background="@color/colorPrimary"
                android:onClick="ZapisCislo" />

            <Button
                android:layout_width="60dp"
                android:layout_height="55dp"
                android:text="5"
                android:id="@+id/tlac5"
                android:layout_marginRight="4dp"
                android:layout_marginLeft="4dp"
                android:textColor="#FFFFFF"
                android:textSize="30sp"
                android:background="@color/colorPrimary"
                android:onClick="ZapisCislo" />

            <Button
                android:layout_width="60dp"
                android:layout_height="55dp"
                android:text="6"
                android:id="@+id/tlac6"
                android:layout_marginRight="4dp"
                android:layout_marginLeft="4dp"
                android:textColor="#FFFFFF"
                android:textSize="30sp"
                android:background="@color/colorPrimary"
                android:onClick="ZapisCislo" />

            <Button
                android:layout_width="60dp"
                android:layout_height="55dp"
                android:text="*"
                android:id="@+id/tlacKrat"
                android:layout_marginRight="4dp"
                android:layout_marginLeft="4dp"
                android:textColor="#FFFFFF"
                android:textSize="30sp"
                android:onClick="Vynasob"
                android:background="@color/colorPrimary" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp" >

            <Button
                android:layout_width="60dp"
                android:layout_height="55dp"
                android:text="1"
                android:id="@+id/tlac1"
                android:layout_marginRight="4dp"
                android:layout_marginLeft="4dp"
                android:textColor="#FFFFFF"
                android:textSize="30sp"
                android:background="@color/colorPrimary"
                android:onClick="ZapisCislo" />

            <Button
                android:layout_width="60dp"
                android:layout_height="55dp"
                android:text="2"
                android:id="@+id/tlac2"
                android:layout_marginRight="4dp"
                android:layout_marginLeft="4dp"
                android:textColor="#FFFFFF"
                android:textSize="30sp"
                android:background="@color/colorPrimary"
                android:onClick="ZapisCislo" />

            <Button
                android:layout_width="60dp"
                android:layout_height="55dp"
                android:text="3"
                android:id="@+id/tlac3"
                android:layout_marginRight="4dp"
                android:layout_marginLeft="4dp"
                android:textColor="#FFFFFF"
                android:textSize="30sp"
                android:background="@color/colorPrimary"
                android:onClick="ZapisCislo" />

            <Button
                android:layout_width="60dp"
                android:layout_height="55dp"
                android:text="-"
                android:id="@+id/tlacMin"
                android:layout_marginRight="4dp"
                android:layout_marginLeft="4dp"
                android:textColor="#FFFFFF"
                android:textSize="30sp"
                android:onClick="Odecti"
                android:background="@color/colorPrimary" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:weightSum="1">

            <Button
                android:layout_width="128dp"
                android:layout_height="55dp"
                android:text="0"
                android:id="@+id/tlac0"
                android:layout_marginRight="4dp"
                android:layout_marginLeft="4dp"
                android:textColor="#FFFFFF"
                android:textSize="30sp"
                android:background="@color/colorPrimary"
                android:onClick="ZapisCislo" />

            <Button
                android:layout_width="60dp"
                android:layout_height="55dp"
                android:text="."
                android:id="@+id/tlacCarka"
                android:layout_marginRight="4dp"
                android:layout_marginLeft="4dp"
                android:textColor="#FFFFFF"
                android:textSize="32sp"
                android:background="@color/colorPrimary"
                android:onClick="ZapisCarku" />

            <Button
                android:layout_width="60dp"
                android:layout_height="55dp"
                android:text="+"
                android:id="@+id/tlacPlus"
                android:layout_marginRight="4dp"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="0dp"
                android:textColor="#FFFFFF"
                android:textSize="30sp"
                android:onClick="Secti"
                android:background="@color/colorPrimary" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:weightSum="1" >

            <Button
                android:layout_width="265dp"
                android:layout_height="60dp"
                android:text="="
                android:id="@+id/tlacVysl"
                android:layout_marginRight="4dp"
                android:layout_marginLeft="4dp"
                android:textColor="#FFFFFF"
                android:textSize="32sp"
                android:background="@color/colorPrimary"
                android:onClick="Vypocti" />

        </TableRow>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/linearLayout">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="34dp"
            android:weightSum="1">

            <TextView
                android:layout_width="112dp"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="NaN"
                android:textColor="#000"
                android:id="@+id/Cislo1"
                android:textSize="12dp"
                android:layout_alignRight="@+id/linearLayout"
                android:layout_alignEnd="@+id/linearLayout"
                android:layout_alignLeft="@+id/linearLayout"
                android:layout_alignStart="@+id/linearLayout"
                android:layout_above="@+id/linearLayout"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="0.3"
                android:gravity="right" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="..."
                android:textColor="#000"
                android:id="@+id/Znamenko"
                android:textSize="15dp"
                android:layout_alignRight="@+id/linearLayout"
                android:layout_alignEnd="@+id/linearLayout"
                android:layout_alignLeft="@+id/linearLayout"
                android:layout_alignStart="@+id/linearLayout"
                android:layout_above="@+id/linearLayout"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="0.3"
                android:gravity="center_vertical|center_horizontal"
                android:layout_gravity="center_vertical" />

            <TextView
                android:layout_width="106dp"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="NaN"
                android:textColor="#000"
                android:id="@+id/Cislo2"
                android:textSize="12dp"
                android:layout_alignRight="@+id/linearLayout"
                android:layout_alignEnd="@+id/linearLayout"
                android:layout_alignLeft="@+id/linearLayout"
                android:layout_alignStart="@+id/linearLayout"
                android:layout_above="@+id/linearLayout"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="0.3"
                android:gravity="left" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/linearLayout"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="0"
                android:textColor="#000"
                android:id="@+id/Obrazovka"
                android:textSize="40sp"
                android:layout_alignRight="@+id/linearLayout"
                android:layout_alignEnd="@+id/linearLayout"
                android:layout_alignLeft="@+id/linearLayout"
                android:layout_alignStart="@+id/linearLayout"
                android:layout_above="@+id/linearLayout"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:gravity="center_vertical" />
        </TableRow>

    </LinearLayout>
</RelativeLayout>
